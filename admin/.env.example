# Admin Service Environment Variables

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment mode (development, staging, production)
NODE_ENV=development

# Server configuration
PORT=8082
HOST=0.0.0.0

# ================================
# API CONFIGURATION
# ================================

# Functions/API service base URL
API_BASE_URL=http://localhost:5001

# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=https://api.app-oint.com

# ================================
# AUTHENTICATION & SECURITY
# ================================

# Admin authentication settings
ADMIN_SECRET_KEY=your-admin-secret-key
ADMIN_SESSION_TIMEOUT=3600

# JWT configuration for admin
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=8h

# ================================
# EXTERNAL SERVICES
# ================================

# Firebase configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ================================
# MONITORING & LOGGING
# ================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable admin audit logging
ENABLE_AUDIT_LOG=true

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable admin features
ENABLE_USER_MANAGEMENT=true
ENABLE_SYSTEM_SETTINGS=true
ENABLE_ANALYTICS_ADMIN=true

# ================================
# DEVELOPMENT ONLY
# ================================

# Enable development mode
ENABLE_DEV_MODE=true