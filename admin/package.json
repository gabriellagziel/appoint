{
  "name": "admin-app", 
  "version": "1.0.0",
  "scripts": {
    "build": "mkdir -p out && echo 'Building admin app...'",
    "export": "mkdir -p out && cp public/index.html out/index.html",
    "serve": "serve out -p ${PORT:-8082} --single",
    "start": "npm run serve",
    "dev": "npm run serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:health": "jest --testPathPattern=health",
    "lint": "echo 'No linting configured' && exit 0",
    "clean": "rm -rf out node_modules/.cache coverage",
    "docker:build": "docker build -t app-oint/admin:latest .",
    "docker:run": "docker run -p 8082:8082 app-oint/admin:latest",
    "docker:dev": "docker-compose up admin",
    "health": "curl -f http://localhost:8082/health.html || exit 1"
  },
  "dependencies": {
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "express": "^4.18.2"
  }
}
