# ========================================
# App-Oint Enterprise API - Production Environment
# ========================================

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT=base64_encoded_service_account_json_here
FIREBASE_DATABASE_URL=https://appoint-enterprise.firebaseio.com
FIREBASE_PROJECT_ID=appoint-enterprise

# Email Configuration (SMTP)
EMAIL_USER=noreply@appoint.com
EMAIL_PASS=your_smtp_app_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Server Configuration
PORT=3000
NODE_ENV=production
AUTO_APPROVE=false

# JWT Secret (for backward compatibility)
JWT_SECRET=your_jwt_secret_here

# Invoice Configuration
COMPANY_NAME=App-Oint Enterprise
COMPANY_IBAN=DE89370400440532013000
COMPANY_SWIFT=COBADEFFXXX
COMPANY_ADDRESS=123 Enterprise St, New York, NY 10001
COMPANY_EMAIL=billing@appoint.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_BASE_URL=https://api.app-oint.com
DASHBOARD_URL=https://api.app-oint.com/dashboard
DOCS_URL=https://docs.app-oint.com

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Security
CORS_ORIGIN=https://api.app-oint.com
SECURE_COOKIES=true
SESSION_SECRET=your_session_secret_here

# Database Configuration
FIRESTORE_EMULATOR_HOST=
FIRESTORE_PROJECT_ID=appoint-enterprise

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
COMPRESSION_ENABLED=true
CACHE_CONTROL_MAX_AGE=86400

# ========================================
# DigitalOcean App Platform Configuration
# ========================================

# App Platform Environment Variables
APP_PLATFORM_ENV=production
APP_PLATFORM_REGION=nyc
APP_PLATFORM_SIZE=s-1vcpu-1gb

# ========================================
# Monitoring & Alerts
# ========================================

# Uptime Monitoring
UPTIME_WEBHOOK_URL=your_uptime_webhook_url_here
ALERT_EMAIL=alerts@appoint.com

# ========================================
# Development Overrides (for testing)
# ========================================

# Set to 'true' for immediate API key delivery (development only)
# AUTO_APPROVE=false

# ========================================
# Instructions for Setup:
# ========================================
# 1. Replace all 'your_*_here' values with actual production credentials
# 2. Encode Firebase service account JSON: base64 -i service-account.json
# 3. Set up Gmail app password for email functionality
# 4. Configure monitoring services (Sentry, GA, etc.)
# 5. Update domain settings in DigitalOcean
# 6. Test all endpoints before going live 