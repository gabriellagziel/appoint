rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);

      match /meetings/{mid} {
        allow read: if isOwner(uid);
        allow create, update: if isOwner(uid) && request.resource.data.startAt is timestamp;
        allow delete: if isOwner(uid);
      }

      match /reminders/{rid} {
        allow read: if isOwner(uid);
        allow create, update: if isOwner(uid) && request.resource.data.dueAt is timestamp;
        allow delete: if isOwner(uid);
      }
    }
  }
}



