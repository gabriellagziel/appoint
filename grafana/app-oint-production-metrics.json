{
    "dashboard": {
        "id": null,
        "title": "App-Oint Production Metrics",
        "tags": [
            "app-oint",
            "production"
        ],
        "style": "dark",
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "HTTP Request Duration - P50",
                "type": "stat",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.5, rate(http_request_duration_ms_bucket[5m]))",
                        "legendFormat": "P50"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "ms",
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green"
                                },
                                {
                                    "color": "yellow",
                                    "value": 200
                                },
                                {
                                    "color": "red",
                                    "value": 500
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "HTTP Request Duration - P95",
                "type": "stat",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
                        "legendFormat": "P95"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "ms",
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green"
                                },
                                {
                                    "color": "yellow",
                                    "value": 500
                                },
                                {
                                    "color": "red",
                                    "value": 1000
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "HTTP Request Duration - P99",
                "type": "stat",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.99, rate(http_request_duration_ms_bucket[5m]))",
                        "legendFormat": "P99"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "ms",
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green"
                                },
                                {
                                    "color": "yellow",
                                    "value": 1000
                                },
                                {
                                    "color": "red",
                                    "value": 2000
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "CPU Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(process_cpu_user_seconds_total[5m])*100",
                        "legendFormat": "CPU %"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green"
                                },
                                {
                                    "color": "yellow",
                                    "value": 70
                                },
                                {
                                    "color": "red",
                                    "value": 90
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Memory Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes/1024/1024",
                        "legendFormat": "Memory MB"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "bytes",
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green"
                                },
                                {
                                    "color": "yellow",
                                    "value": 512
                                },
                                {
                                    "color": "red",
                                    "value": 1024
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                }
            },
            {
                "id": 6,
                "title": "Request Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_request_total[5m])",
                        "legendFormat": "Req/sec"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "reqps"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "refresh": "30s"
    }
}