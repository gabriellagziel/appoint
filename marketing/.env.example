# Marketing Service Environment Variables

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment mode (development, staging, production)
NODE_ENV=development

# Server configuration
PORT=8080
HOST=0.0.0.0

# ================================
# SEO & CONTENT
# ================================

# Site configuration
NEXT_PUBLIC_SITE_URL=https://app-oint.com
NEXT_PUBLIC_SITE_NAME=App-Oint
NEXT_PUBLIC_SITE_DESCRIPTION=Professional appointment booking platform

# ================================
# API CONFIGURATION
# ================================

# Functions/API service base URL
API_BASE_URL=http://localhost:5001

# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=https://api.app-oint.com

# ================================
# ANALYTICS & TRACKING
# ================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel (optional)
NEXT_PUBLIC_FB_PIXEL_ID=your-facebook-pixel-id

# ================================
# EXTERNAL SERVICES
# ================================

# Firebase configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Email marketing (if applicable)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# CMS integration (if applicable)
CMS_API_URL=https://cms.app-oint.com
CMS_API_KEY=your-cms-api-key

# ================================
# SOCIAL MEDIA
# ================================

# Social media links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/app-oint
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/app-oint
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/app-oint

# ================================
# CONTACT INFORMATION
# ================================

# Contact details
NEXT_PUBLIC_CONTACT_EMAIL=contact@app-oint.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@app-oint.com
NEXT_PUBLIC_PHONE=+1-800-123-4567

# ================================
# MONITORING & LOGGING
# ================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable marketing features
ENABLE_CONTACT_FORM=true
ENABLE_NEWSLETTER_SIGNUP=true
ENABLE_LIVE_CHAT=true
ENABLE_BLOG=true

# ================================
# LOCALIZATION
# ================================

# Default language
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de

# ================================
# DEVELOPMENT ONLY
# ================================

# Enable development tools
ENABLE_DEVTOOLS=true

# Mock data for development
USE_MOCK_DATA=false