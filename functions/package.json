  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node index.js",
    "dev": "npm run build && nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:health": "jest --testPathPattern=health",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "firebase deploy --only functions",
    "docker:build": "docker build -t app-oint/functions:latest .",
    "docker:run": "docker run -p 8080:8080 app-oint/functions:latest",
    "docker:dev": "docker-compose up functions-dev",
    "clean": "rm -rf dist coverage .nyc_output"
  },
