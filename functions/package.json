    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.7.0",
    "joi": "^17.13.3",
    "nodemon": "^3.1.9",
