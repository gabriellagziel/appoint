# Functions/API Service Environment Variables

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment mode (development, staging, production)
NODE_ENV=development

# Server configuration
PORT=5001
HOST=0.0.0.0

# ================================
# DATABASE CONFIGURATION
# ================================

# Primary database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/app_oint

# Database pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis cache connection
REDIS_URL=redis://localhost:6379/0

# ================================
# FIREBASE CONFIGURATION
# ================================

# Firebase project settings
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Firebase Functions settings
FUNCTIONS_EMULATOR_HOST=localhost:5001
FIRESTORE_EMULATOR_HOST=localhost:8080

# ================================
# AUTHENTICATION & SECURITY
# ================================

# JWT configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:8081,http://localhost:8082

# API versioning
API_VERSION=v1

# ================================
# EXTERNAL SERVICES
# ================================

# Email service configuration
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Payment processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# SMS service (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=app-oint-storage

# ================================
# NOTIFICATION SERVICES
# ================================

# Push notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================

# Calendar integrations
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# Zoom integration (if applicable)
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# ================================
# MONITORING & LOGGING
# ================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# APM monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=app-oint-api

# Health check configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ================================
# CACHING & PERFORMANCE
# ================================

# Cache configuration
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true
ENABLE_RESPONSE_CACHE=true

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable API features
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOG=true

# ================================
# BACKUP & MAINTENANCE
# ================================

# Database backup configuration
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance

# ================================
# DEVELOPMENT ONLY
# ================================

# Enable development features
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_LOGS=true
ENABLE_CORS_ALL=false

# Mock external services
USE_MOCK_EMAIL=false
USE_MOCK_SMS=false
USE_MOCK_PAYMENTS=false

# Debug configuration
DEBUG=app-oint:api*