{
  "name": "Flutter Dev",
  "image": "ghcr.io/cirruslabs/flutter:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter",
        "dart-code.dart-code"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "git pull origin main && flutter doctor && dart pub get && flutter pub get",
  "remoteUser": "root"
}

