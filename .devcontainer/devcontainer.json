{
  "name": "Flutter App",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "dart --version && dart pub get",
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.dart-code",
        "dart-code.flutter"
      ]
    },
    "codespaces": {
      "security": {
        "allowedDomains": [
          "storage.googleapis.com",
          "dart.dev",
          "pub.dev",
          "firebase-public.firebaseio.com"
        ]
      }
    }
  },
  "features": {},
  "mounts": [
    "source=${localEnv:HOME}/.pub-cache,target=/root/.pub-cache,type=bind"
  ]
}
