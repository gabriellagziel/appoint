{
  "name": "appoint-web-applications",
  "version": "1.0.0",
  "description": "Web applications for APP-OINT",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "husky add .husky/pre-commit \"npm run pre-commit-hook\"",
    "pre-commit-hook": "npm run lint",
    "lint": "npm run lint:marketing && npm run lint:user && npm run lint:business && npm run lint:enterprise && npm run lint:admin",
    "lint:marketing": "cd marketing && npm run lint",
    "lint:user": "cd user && npm run lint",
    "lint:business": "cd business && npm run lint",
    "lint:enterprise": "cd enterprise-onboarding-portal && npm run lint",
    "lint:admin": "cd admin && npm run lint",
    "build": "npm run build:marketing && npm run build:user && npm run build:business && npm run build:enterprise && npm run build:admin",
    "build:marketing": "cd marketing && npm run build",
    "build:user": "cd user && npm run build",
    "build:business": "cd business && npm run build",
    "build:enterprise": "cd enterprise-onboarding-portal && npm run build",
    "build:admin": "cd admin && npm run build",
    "dev": "echo 'Use npm run dev:marketing, dev:user, etc. to start individual apps'",
    "dev:marketing": "cd marketing && npm run dev",
    "dev:user": "cd user && npm run dev",
    "dev:business": "cd business && npm run dev",
    "dev:enterprise": "cd enterprise-onboarding-portal && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "setup-hooks": "npm install && husky install && chmod +x .husky/pre-commit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "express": "^5.1.0",
    "firebase-admin": "^13.4.0",
    "ioredis": "^5.7.0"
  }
}
