{
  "name": "appoint-web-applications",
  "version": "1.0.0",
  "description": "Web applications for APP-OINT",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "husky add .husky/pre-commit \"npm run pre-commit-hook\"",
    "pre-commit-hook": "npm run lint",
    "lint": "npm run lint:marketing && npm run lint:business && npm run lint:enterprise && npm run lint:admin && npm run lint:dashboard",
    "lint:marketing": "cd marketing && npm run lint",
    "lint:business": "cd business && npm run lint",
    "lint:enterprise": "cd enterprise-onboarding-portal && npm run lint",
    "lint:admin": "cd admin && npm run lint",
    "lint:dashboard": "cd dashboard && npm run lint",
    "build": "npm run build:functions && npm run build:marketing && npm run build:business && npm run build:enterprise && npm run build:admin && npm run build:dashboard",
    "build:functions": "cd functions && npm run build",
    "build:marketing": "cd marketing && npm run build",
    "build:business": "cd business && npm run build",
    "build:enterprise": "cd enterprise-onboarding-portal && npm run build",
    "build:admin": "cd admin && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "dev": "echo 'Use npm run dev:marketing, dev:business, etc. to start individual apps'",
    "dev:marketing": "cd marketing && npm run dev",
    "dev:business": "cd business && npm run dev",
    "dev:enterprise": "cd enterprise-onboarding-portal && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "dev:dashboard": "cd dashboard && npm run dev",
    "setup-hooks": "npm install && husky install && chmod +x .husky/pre-commit",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "clean:all": "npm run clean && cd functions && npm run clean && cd ../admin && npm run clean && cd ../business && npm run clean && cd ../dashboard && npm run clean && cd ../enterprise-onboarding-portal && npm run clean && cd ../marketing && npm run clean",
    "lint:changed": "git diff --name-only origin/main...HEAD | grep -E '\\.(ts|tsx)$' | xargs -r npx eslint --max-warnings=0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "clsx": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.5.3",
    "tailwind-merge": "^3.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "express": "^5.1.0",
    "firebase-admin": "^13.4.0",
    "ioredis": "^5.7.0",
    "typescript": "^5.9.2"
  }
}
