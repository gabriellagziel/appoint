name: CI

on:
  push:
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Setup Dart
        uses: dart-lang/setup-dart@REDACTED_TOKEN
        with:
          sdk: "3.4.0"
      - name: Setup Flutter
        uses: subosito/flutter-action@REDACTED_TOKEN
        with:
          channel: stable
          cache: true
      - run: flutter --version
      - run: dart --version
      - run: flutter pub get
      - run: flutter analyze
      - run: dart test --coverage
