name: CI

on: [push, pull_request]

jobs:
  analyze:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: subosito/flutter-action@v2
        with:
          flutter-version: "latest"
      - run: flutter pub get
      - run: flutter analyze
      - run: flutter test
      - run: dart run tool/arb_validator.dart
      - run: npm run spell-check 