{
  "name": "business-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "mkdir -p out && echo '<html><head><title>Business</title></head><body><h1>Business App</h1><p>Set • Send • Done</p></body></html>' > out/index.html",
    "serve": "serve out -p ${PORT:-8081} --single",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:health": "jest --testPathPattern=health",
    "lint": "echo 'No linting configured' && exit 0",
    "clean": "rm -rf out node_modules/.cache coverage",
    "docker:build": "docker build -t app-oint/business:latest .",
    "docker:run": "docker run -p 8081:8081 app-oint/business:latest",
    "docker:dev": "docker-compose up business",
    "health": "curl -f http://localhost:8081/health.html || exit 1"
  },
  "dependencies": {
    "lucide-react": "^0.541.0",
    "next": "^15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "typescript": "^5.9.2"
  }
}