# AppOint Docker Compose Environment Variables

# Environment
NODE_ENV=development

# Database Configuration
POSTGRES_DB=app_oint
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/app_oint

# Redis Configuration  
REDIS_PASSWORD=redis123

# Firebase Configuration
FIREBASE_PROJECT_ID=app-oint-core
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@app-oint-core.iam.gserviceaccount.com

# Authentication
JWT_SECRET=your-jwt-secret-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# Dashboard URLs
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8080

# External Services (Optional - add your keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
SENDGRID_API_KEY=your_sendgrid_api_key

# Logging
LOG_LEVEL=info
